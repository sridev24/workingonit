<!--
  - This ivy.xml file is used to validate the source configuration files once 
  - the final files have been produced by applying the roundup xslt templates.
  -->

<ivy-module version="2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

    <info organisation="org.workingonit"
        module="config"
        revision="alpha"
        status="integration">
    </info>

    <configurations>
        <conf name="distributed"/>
        <conf name="endorsed"/>
        <conf name="default"/>
    </configurations>

    <publications>
        <artifact name="org.workingonit.config" type="jar" conf="distributed"/>
    </publications>

    <dependencies>
        <!-- required for the docbook documentation -->
        <dependency org="org.apache.xmlgraphics" name="fop" rev="0.95" conf="endorsed->default"/>
        <dependency org="com.icl.saxon" name="saxon" rev="6.5.5" conf="endorsed->default"/>
    </dependencies>

</ivy-module>
