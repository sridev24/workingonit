        <move file="archive/${archive}/javahelp/lib/jhall.jar" tofile="artifacts/jars/jhall.jar"/>

        <!-- source -->
        <move file="archive/${archive}/src.jar" tofile="artifacts/sources/source.zip"/>
    </build>

</packager-module>