    <property name="name" value="${ivy.packager.module}"/>
    <property name="revision" value="${ivy.packager.revision}"/>
    <property name="archive" value="jh2.0"/>

    <resource url="file:///${java.io.tmpdir}/javahelp-2_0_05.zip"
      sha1="4459159de58024c92d1ff228866916747a70536c">
