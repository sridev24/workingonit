<!DOCTYPE project>

<antlib>

    <macrodef name="init">
        <attribute name="srcDir" default="${distributed.lib.dir}"/>
        <attribute name="destDir" default="war"/>
        <sequential>
            <copy todir="@{destDir}/WEB-INF/lib" flatten="true">
                <fileset dir="@{srcDir}" includes="**/*.jar"/>
            </copy>
        </sequential>
    </macrodef>

</antlib>