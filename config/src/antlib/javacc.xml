<!DOCTYPE project>

<antlib>

    <macrodef name="generate">
        <attribute name="src"/>
        <attribute name="destDir" default="${target.dir}"/>
        <sequential>
            <mkdir dir="@{destDir}"/>
            <java classname="javacc">
                <arg line="-OUTPUT_DIRECTORY=@{destDir} @{src}"/>
                <classpath>
                    <path refid="endorsed.classpath"/>
                    <path refid="distributed.classpath"/>
                </classpath>
            </java>
        </sequential>
    </macrodef>

</antlib>