<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xmlns="http://java.sun.com/xml/ns/javaee" 
        xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
        id="KITCHENSINK" version="2.5">

    <display-name>kitchensink</display-name>

    <!-- ================================================================== -->
    <!-- Context Parameters                                                 -->
    <!-- ================================================================== -->

    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>kitchensink.root</param-value>
    </context-param>

    <context-param>
        <param-name>modulus.platform.name</param-name>
        <param-value>default</param-value>
    </context-param>

    <!-- ================================================================== -->
    <!-- Listener Definitions                                               -->
    <!-- ================================================================== -->

    <listener>
        <listener-class>org.workingonit.modulus.web.PlatformContextLoaderListener</listener-class>
    </listener>

    <!-- ================================================================== -->
    <!-- Servlet Definitions                                                -->
    <!-- ================================================================== -->

    <servlet>
        <servlet-name>kitchensink</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>kitchensink</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
